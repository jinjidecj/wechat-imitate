/**index.wxss**/
.user{
  padding-top: 80rpx;
  height: 380rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 90rpx 0 0 0;
  box-sizing: border-box;
  background-color: #7661D1;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: black;
}

.usermotto {
  margin-top: 200px;
}

.user-center {
  border: solid ;
  width: 95%;
  margin-left: 2.5%;
  background-color: #fff;
  margin-top: -20px;
  z-index: 2;
  height: 145px;
  border-radius: 5px;
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
}