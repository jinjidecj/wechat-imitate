.view-list{
  width: 100%;
  display: flex;
  flex-direction:column;
}
.view-items{
  display: flex;
  flex-direction:column;
  justify-items: center;
  background-color: white;
  margin: 30rpx  30rpx 0rpx 30rpx;
  border-radius: 10rpx;
}
.items{
  display: flex;
  flex-direction: row;
}
.userinfo-avatar {
  width: 100rpx;
  height: 100rpx;
  margin: 20rpx;
  border-radius: 50%;
}
.name{
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding-left: 30rpx;
}
.title-size{
  font-size: 35rpx;
}
.text-size{
  font-size: 30rpx; 
}
.gary-text{
  color: gray;
}
.title-padding{
  padding: 10rpx 10rpx 0 10rpx;
}
.arrow-right{
  float:right; 
}

.pop-view{
  background-color: #f5f5f5; 
  width: 100%;
  height: 100%;
}
.view-bottom{
  display: flex;
  flex-direction:column;
  justify-items: center;
  background-color: white;
  margin: 0rpx  30rpx 0rpx 30rpx;
  border-radius: 10rpx;
}
.input-box{
  display: flex;
  justify-content: center;
}
.input-css{
  height: 100rpx;
  border: solid 1rpx gray;
  border-radius: 10rpx;
  width: 90%;
  padding: 10rpx;
}
.btn-view{
  padding: 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
}
.btn-item{
  padding: 20rpx 20rpx;
}
.btn-small{
  max-width: 200rpx;
  max-height: 50rpx;
}
.text-f{
  padding: 10rpx;
}
